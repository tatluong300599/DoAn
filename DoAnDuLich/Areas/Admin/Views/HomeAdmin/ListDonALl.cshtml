@using DoAnDuLich.Models
@model IEnumerable<CTDonDatTour>
@{
    ViewBag.Title = "ListDonALl";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Duyet Don Dat Tour
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ho Ten</th>
                            <th>Ten Tour</th>
                            <th>Ngay XP</th>
                            <th>Người duyệt</th>
                            <th>Dat Cho</th>
                            <th>Thành Tiền</th>
                            <th>Trạng Thái</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Ho Ten</th>
                            <th>Ten Tour</th>
                            <th>Ngay XP</th>
                            <th>Người duyệt</th>
                            <th>Dat Cho</th>
                            <th>Thành Tiền</th>
                            <th>Trạng Thái</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DonDatTour.KhachHang.HoTen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DonDatTour.CTTour.Tour.TenTour)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DonDatTour.NgayXP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NhanVien.HoTen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DonDatTour.SoLuongKhach)
                            </td>
                            <td>
                                @string.Format("{0:0,0}",item.DonDatTour.ThanhTien) VND
                            </td>
                            @if (item.TTThanhToan == 0)
                            {
                                <td>
                                    Chưa thanh toán
                                </td>
                            }
                            else if(item.TTThanhToan == 1)
                            {
                                <td>
                                    Đã thanh toán
                                </td>
                            }
                            else
                            {
                                <td>
                                    Đã hủy
                                </td>
                            }
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

