@model IEnumerable<DoAnDuLich.Models.KhuyenMai>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        DataTable Don
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenKM)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NoiDung)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PhanTram)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NgayBD)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NgayKT)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TrangThai)
                        </th>
                        <th></th>
                    </tr>
                </thead>


                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenKM)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NoiDung)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PhanTram)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NgayBD)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NgayKT)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TrangThai)
                        </th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenKM)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NoiDung)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhanTram)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayBD)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayKT)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TrangThai)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.MaKM }) |
                                @Html.ActionLink("Details", "Details", new { id = item.MaKM }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.MaKM })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>