@model IEnumerable<DoAnDuLich.Models.NhanVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <a href="@Url.Action("Create", "QLNhanVien")" class="btn btn-success btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-check"></i>
                    </span>
                    <span class="text">Thêm Mới Nhân Viên</span>
                </a>
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.HoTen)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SoDienThoai)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DiaChi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MatKhau)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quyen)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.HoTen)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SoDienThoai)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DiaChi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MatKhau)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quyen)
                            </th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HoTen)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoDienThoai)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiaChi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MatKhau)
                                </td>
                                @if (item.Quyen == 0)
                                {
                                    <td>
                                        Admin
                                    </td>
                                }
                                else if (item.Quyen == 1)
                                {
                                    <td>
                                        Nhân viên
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        Bị Khóa
                                    </td>
                                }
                                <td>
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaNV }, new { @class = "btn btn-success" }) |
                                    @Html.ActionLink("Xem", "Details", new { id = item.MaNV }, new { @class = "btn btn-primary" }) |
                                    @if (item.Quyen == -1)
                                    {
                                        @Html.ActionLink("Mở Khóa", "MoKhoaNV", new { maNV = item.MaNV }, new { @class = "btn btn-info" })
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Khóa", "KhoaNV", new { maNV = item.MaNV }, new { @class = "btn btn-danger" })
                                    }

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
