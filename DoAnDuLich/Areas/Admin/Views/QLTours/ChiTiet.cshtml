@using DoAnDuLich.Models
@model IEnumerable<CTTour>
@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card mb-4">
    <div class="card-header">
        <h6 class="m-0 font-weight-bold text-primary">
            <a href="@Url.Action("TaoMoi", "QLTours", new { maTour = ViewData["MaTour"] })" class="btn btn-success btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-check"></i>
                </span>
                <span class="text">Thêm Ngày Khời Hành</span>
            </a>
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Tour.TenTour)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NgayXP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SoLuongCho)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TrangThai)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Tour.TenTour)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NgayXP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SoLuongCho)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TrangThai)
                        </th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tour.TenTour)
                            </td>
                            <td>
                                @item.NgayXP.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoLuongCho)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TrangThai)
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "CapNhapNgay", "QLTours", new { maTour = item.MaTour, ngayXP = item.NgayXP }, new { @class = "btn btn-primary" }) |
                                @if (item.TrangThai == false)
                                {
                                    @Html.ActionLink("Mở Khóa", "MoKhoaCTTour", "QLTours", new { maTour = item.MaTour, ngayXP = item.NgayXP }, new { @class = "btn btn-success" })
                                }
                                else
                                {
                                    @Html.ActionLink("Khóa", "KhoaCTTour", "QLTours", new { maTour = item.MaTour, ngayXP = item.NgayXP }, new { @class = "btn btn-danger" })
                                }
                                @Html.ActionLink("Danh Sach Don","DanhSachKhachDat","QLTours", new { maTour = item.MaTour, ngayXP = item.NgayXP }, new { @class = "btn btn-info" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.ActionLink("Tro Ve", "Details", new { id = ViewData["MaTour"] }, new { @class = "btn btn-danger" })
        </div>
    </div>
</div>

