@model IEnumerable<DoAnDuLich.Models.Tour>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Quan Ly Tour</h2>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            <a href="@Url.Action("Create", "QLTours")" class="btn btn-success btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-check"></i>
                </span>
                <span class="text">Thêm Tour mới</span>
            </a>
        </h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenTour)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SoNgay)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TrangThai)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DiemDen.TenDiemDen)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DiemXP.TenDiemXP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LoaiTour.TenLoaiTour)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenTour)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SoNgay)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TrangThai)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DiemDen.TenDiemDen)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DiemXP.TenDiemXP)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LoaiTour.TenLoaiTour)
                        </th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenTour)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoNgay)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TrangThai)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DiemDen.TenDiemDen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DiemXP.TenDiemXP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LoaiTour.TenLoaiTour)
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.MaTour }, new { @class = "btn btn-success" }) |
                                @Html.ActionLink("Xem", "Details", new { id = item.MaTour }, new { @class = "btn btn-info" }) |
                                @Html.ActionLink("Ngưng", "Delete", new { id = item.MaTour }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>